{
  "name": "meowstik-desktop",
  "version": "1.0.0",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.8.1"
  },
  "build": {
    "appId": "com.meowstik.desktop",
    "productName": "Meowstik Desktop",
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development"
    },
    "win": {
      "target": "nsis"
    },
    "extraResources": [
      {
        "from": "../server",
        "to": "server",
        "filter": [
          "**/*",
          "!node_modules",
          "!**/*.map"
        ]
      },
      {
        "from": "../node_modules",
        "to": "server/node_modules",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../desktop-agent",
        "to": "desktop-agent",
        "filter": [
          "dist/**/*",
          "package.json",
          "node_modules/**/*"
        ]
      },
      {
        "from": "../dist",
        "to": "dist"
      }
    ]
  }
}